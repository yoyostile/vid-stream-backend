.row
  .col-md-12
    %h1 Streams
    .col-md-6
      %form#create
        = text_field_tag :channel
        = submit_tag :create
      %form#join
        = text_field_tag :channel
        = submit_tag :join

    .col-md-6.streams

.row
  .col-md-12
    %video.video-container

  - if false
    .table-responsive
      %table.table
        %thead
          %th public_id
          %th created_at
          %th updated_at
          %th user_id
          %th lat
          %th lng
          %th active
        %tbody
          - @streams.each do |stream|
            %tr
              %td= link_to stream.public_id, stream
              %td= stream.created_at
              %td= stream.updated_at
              %td= stream.user_id
              %td= stream.lat
              %td= stream.lng
              %td= stream.active

:coffee
  $ ->
    roomsToLinks = (data) ->
      s = ""
      for k,v of data
        s += "<a href='#' data-room='" + k + "'>" + k + "</a><br>"
      s

    streams = $.get 'https://ngnsignaling.r4r3.me', (data) ->
      for k,v of data
        if k.match(/^\/#.*/)?
          delete data[k]


      $('.streams').append roomsToLinks(data)

    $(document).on 'click', 'a[data-room]', (e) ->
      e.preventDefault()
      room = $(@).data('room')
      stream = new Stream room
      stream.joinStream()

    $('form#create').on 'submit', (e) ->
      e.preventDefault()
      channel = $('#create #channel').val()
      stream = new Stream channel
      stream.createStream()

    $('form#join').on 'submit', (e) ->
      e.preventDefault()
      channel = $('#join #channel').val()
      stream = new Stream channel
      stream.joinStream()
